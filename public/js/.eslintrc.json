{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 5
  },
  "env": {
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "curly": [
      "error",
      "all"
    ],
    "no-console": 0,
    "semi": [
      "error",
      "never"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "indent": [
      "error",
      2
    ]
  }
}
